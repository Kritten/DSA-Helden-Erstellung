{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema für die DSA Helden Erstellung",
  "description": "JSON Schema für die DSA Helden Erstellung",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "steps": {
      "type": "array",
      "description": "Die einzelnen Schritte der Erstellung",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "sections": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "fields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "if": {
                      "properties": {
                        "type": {
                          "const": "select"
                        }
                      }
                    },
                    "then": {
                      "additionalProperties": false,
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "label": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "oneOf": [
                            {
                              "const": "text"
                            },
                            {
                              "const": "number"
                            },
                            {
                              "const": "select"
                            }
                          ]
                        },
                        "data": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "required": [
                        "id",
                        "label",
                        "type",
                        "data"
                      ]
                    },
                    "else": {
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "id": {
                            "type": "string"
                          },
                          "label": {
                            "type": "string"
                          },
                          "type": "string",
                          "oneOf": [
                            {
                              "const": "text"
                            },
                            {
                              "const": "number"
                            },
                            {
                              "const": "select"
                            }
                          ]
                        }
                      },
                      "required": [
                        "id",
                        "label",
                        "type"
                      ]
                    }
                  }
                }
              },
              "required": []
            }
          }
        },
        "required": [
          "title",
          "description"
        ]
      }
    }
  },
  "required": [
    "steps"
  ]
}