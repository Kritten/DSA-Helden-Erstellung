{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Schema für die DSA Helden Erstellung",
  "description": "JSON Schema für die DSA Helden Erstellung",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "steps": {
      "type": "array",
      "description": "Die einzelnen Schritte der Erstellung",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "properties": {
              "type": {
                "type": "string",
                "oneOf": [
                  {
                    "type": "string",
                    "const": "text"
                  },
                  {
                    "type": "string",
                    "const": "number"
                  },
                  {
                    "type": "string",
                    "const": "select"
                  }
                ]
              }
            }
          }
        },
        "required": [
          "title",
          "description"
        ]
      }
    }
  },
  "required": [
    "steps"
  ]
}