{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "id": "step.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "sections": {
            "type": "array",
            "items": {
                "$ref": "section.json"
            }
        }
    },
    "required": [
        "title",
        "description"
    ]
}